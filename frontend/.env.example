# ============================================================================
# ENVIRONMENT VARIABLES - TEMPLATE
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# ============================================================================

# ============================================================================
# REQUIRED: Perplexity API Configuration
# ============================================================================
# Perplexity API Key - Get from https://www.perplexity.ai/settings/api
# Format: pplx-... (starts with 'pplx-')
PERPLEXITY_API_KEY=pplx-YOUR_KEY_HERE

# Optional: Perplexity Base URL (defaults to https://api.perplexity.ai)
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# ============================================================================
# REQUIRED: Ollama Configuration (Local LLM Fallback)
# ============================================================================
# Ollama Base URL - Used for local fallback when Claude API is unavailable
# For local development: http://localhost:11434
# For production: Your Ollama server URL with http:// or https://
OLLAMA_BASE_URL=http://localhost:11434

# Optional: Ollama Model (defaults to mistral)
OLLAMA_MODEL=mistral

# ============================================================================
# OPTIONAL: AI SDK Configuration
# ============================================================================
# Enable AI SDK features (default: false)
NEXT_PUBLIC_USE_AI_SDK=false

# AI SDK logging level (default: info)
# Options: debug, info, warn, error
AI_SDK_LOG_LEVEL=info

# AI SDK timeout in milliseconds (default: 60000, max: 600000)
AI_SDK_TIMEOUT_MS=60000

# AI SDK max retries (default: 3, max: 10)
AI_SDK_MAX_RETRIES=3

# ============================================================================
# OPTIONAL: Other AI Provider Keys (For Testing)
# ============================================================================
# OpenAI API Key - For fallback chat generation
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE

# Google API Key - For search/analysis features
GOOGLE_API_KEY=YOUR_GOOGLE_KEY_HERE

# XAI API Key - Alternative provider
XAI_API_KEY=YOUR_XAI_KEY_HERE

# OpenRouter API Key - LLM aggregator
OPENROUTER_API_KEY=YOUR_OPENROUTER_KEY_HERE

# Mistral API Key - Alternative provider
MISTRAL_API_KEY=YOUR_MISTRAL_KEY_HERE

# Azure OpenAI API Key
AZURE_OPENAI_API_KEY=YOUR_AZURE_KEY_HERE

# ============================================================================
# REQUIRED: Supabase Configuration
# ============================================================================
# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co

# Supabase Anon Key (Public - can be exposed)
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE

# Supabase Service Role Key (Secret - keep secure!)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# Optional: Supabase Access Token (for admin operations)
SUPABASE_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_HERE

# Optional: Supabase Project Ref
SUPABASE_PROJECT_REF=YOUR_PROJECT_REF

# Optional: Supabase Database Password
SUPABASE_DB_PASSWORD=YOUR_DB_PASSWORD_HERE

# ============================================================================
# OPTIONAL: Logging Configuration
# ============================================================================
# Log level for application (default: info)
# Options: debug, info, warn, error
NEXT_PUBLIC_LOG_LEVEL=info

# Log destination (default: console)
# Options: console, file, both
LOG_DESTINATION=console

# ============================================================================
# OPTIONAL: Application Configuration
# ============================================================================
# Environment (automatically set by vercel/next)
NODE_ENV=development

# Application base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. NEVER commit this file or .env.local to git
# 2. .env.local is ignored by .gitignore
# 3. All NEXT_PUBLIC_* variables are exposed to the browser
# 4. Keep secret keys in environment variables only (not prefixed with NEXT_PUBLIC_)
# 5. Rotate keys regularly
# 6. Use different keys for dev, staging, and production
# ============================================================================
