# ============================================================================
# ENVIRONMENT VARIABLES - TEMPLATE
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# ============================================================================

# ============================================================================
# REQUIRED: Claude AI Configuration
# ============================================================================
# Claude API Key - Get from https://console.anthropic.com/settings/keys
# Format: sk-ant-... (starts with 'sk-ant-')
ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE

# ============================================================================
# OPTIONAL: AI SDK Configuration
# ============================================================================
# Enable AI SDK features (default: false)
NEXT_PUBLIC_USE_AI_SDK=false

# AI SDK logging level (default: info)
# Options: debug, info, warn, error
AI_SDK_LOG_LEVEL=info

# AI SDK timeout in milliseconds (default: 60000, max: 600000)
AI_SDK_TIMEOUT_MS=60000

# AI SDK max retries (default: 3, max: 10)
AI_SDK_MAX_RETRIES=3

# ============================================================================
# REQUIRED: Supabase Configuration
# ============================================================================
# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co

# Supabase Anon Key (Public - can be exposed)
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE

# Supabase Service Role Key (Secret - keep secure!)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# Optional: Supabase Access Token (for admin operations)
SUPABASE_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_HERE

# Optional: Supabase Project Ref
SUPABASE_PROJECT_REF=YOUR_PROJECT_REF

# Optional: Supabase Database Password
SUPABASE_DB_PASSWORD=YOUR_DB_PASSWORD_HERE

# ============================================================================
# OPTIONAL: Logging Configuration
# ============================================================================
# Log level for application (default: info)
# Options: debug, info, warn, error
NEXT_PUBLIC_LOG_LEVEL=info

# Log destination (default: console)
# Options: console, file, both
LOG_DESTINATION=console

# ============================================================================
# REQUIRED: Razorpay Payment Gateway Configuration
# ============================================================================
# Razorpay API Key ID - Get from Razorpay Dashboard (Settings > API Keys)
# Format: rzp_test_XXXXXXXXXXXXX (test mode) or rzp_live_XXXXXXXXXXXXX (live mode)
# This is SAFE for client-side use (exposed to browser)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID_HERE

# Razorpay API Key Secret - Get from Razorpay Dashboard (Settings > API Keys)
# ⚠️ CRITICAL: NEVER expose this to the client - SERVER-SIDE ONLY
# Keep this secret and rotate regularly
RAZORPAY_KEY_SECRET=YOUR_KEY_SECRET_HERE

# Razorpay Webhook Secret - Get from Razorpay Dashboard (Settings > Webhooks)
# Used for webhook signature verification
# ⚠️ CRITICAL: NEVER expose this to the client - SERVER-SIDE ONLY
RAZORPAY_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Enable Razorpay payments feature (default: false for development)
# Set to "true" to enable payment processing in the application
NEXT_PUBLIC_ENABLE_PAYMENTS=false

# ============================================================================
# OPTIONAL: Application Configuration
# ============================================================================
# Environment (automatically set by vercel/next)
NODE_ENV=development

# Application base URL (used for Razorpay webhook callbacks and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. NEVER commit this file or .env.local to git
# 2. .env.local is ignored by .gitignore
# 3. All NEXT_PUBLIC_* variables are exposed to the browser
# 4. Keep secret keys in environment variables only (not prefixed with NEXT_PUBLIC_)
# 5. Rotate keys regularly
# 6. Use different keys for dev, staging, and production
#
# RAZORPAY SECURITY WARNINGS:
# ❌ NEVER expose RAZORPAY_KEY_SECRET to client-side code
# ❌ NEVER expose RAZORPAY_WEBHOOK_SECRET to client-side code
# ✅ ONLY NEXT_PUBLIC_RAZORPAY_KEY_ID is safe for client-side use
# ⚠️ Use test mode keys (rzp_test_) during development
# ⚠️ Switch to live mode keys (rzp_live_) only after thorough testing
# ⚠️ Always verify webhook signatures using RAZORPAY_WEBHOOK_SECRET
# ============================================================================
